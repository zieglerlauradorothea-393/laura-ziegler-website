---
const navItems = [
  { href: '/', label: 'Start' },
  { href: '/leistungen', label: 'Leistungen' },
  { href: '/projekte', label: 'Projekte' },
  { href: '/und-sonst-so', label: 'Und sonst so?' },
  { href: '/kontakt', label: 'Kontakt' },
];

const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 left-0 right-0 z-50 bg-pink" style="background-color: var(--color-pink);">
  <nav class="container flex items-center justify-between h-16 md:h-20" aria-label="Hauptnavigation">
    <!-- Logo / Name -->
    <a 
      href="/" 
      class="group flex items-center gap-3 font-extrabold text-xl text-black hover:opacity-80 transition-opacity"
      aria-label="Laura Ziegler – Startseite"
    >
      <span class="italic">Laura Ziegler,</span>
    </a>
    
    <!-- Desktop Navigation -->
    <ul class="hidden md:flex items-center gap-1" role="list">
      {navItems.map((item) => {
        const isActive = currentPath === item.href || 
          (item.href !== '/' && currentPath.startsWith(item.href));
        return (
          <li>
            <a
              href={item.href}
              class:list={[
                'px-4 py-2 font-semibold transition-all',
                isActive 
                  ? 'text-black underline underline-offset-4' 
                  : 'text-black/70 hover:text-black'
              ]}
              aria-current={isActive ? 'page' : undefined}
            >
              {item.label}
            </a>
          </li>
        );
      })}
    </ul>
    
    <!-- Mobile Menu Button -->
    <button 
      id="mobile-menu-btn"
      type="button"
      class="md:hidden p-2 -mr-2 text-black"
      aria-expanded="false"
      aria-controls="mobile-menu"
      aria-label="Menü öffnen"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path id="menu-icon-open" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        <path id="menu-icon-close" class="hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </nav>
  
  <!-- Mobile Menu -->
  <div 
    id="mobile-menu" 
    class="md:hidden hidden bg-pink"
    style="background-color: var(--color-pink);"
    aria-label="Mobile Navigation"
  >
    <ul class="container py-4 space-y-2" role="list">
      {navItems.map((item) => {
        const isActive = currentPath === item.href || 
          (item.href !== '/' && currentPath.startsWith(item.href));
        return (
          <li>
            <a
              href={item.href}
              class:list={[
                'block px-4 py-3 font-semibold transition-all',
                isActive 
                  ? 'text-black underline' 
                  : 'text-black/70 hover:text-black'
              ]}
              aria-current={isActive ? 'page' : undefined}
            >
              {item.label}
            </a>
          </li>
        );
      })}
    </ul>
  </div>
</header>

<!-- Spacer -->
<div class="h-16 md:h-20" aria-hidden="true"></div>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const iconOpen = document.getElementById('menu-icon-open');
  const iconClose = document.getElementById('menu-icon-close');
  
  menuBtn?.addEventListener('click', () => {
    const isExpanded = menuBtn.getAttribute('aria-expanded') === 'true';
    menuBtn.setAttribute('aria-expanded', String(!isExpanded));
    menuBtn.setAttribute('aria-label', isExpanded ? 'Menü öffnen' : 'Menü schließen');
    mobileMenu?.classList.toggle('hidden');
    iconOpen?.classList.toggle('hidden');
    iconClose?.classList.toggle('hidden');
  });
</script>
