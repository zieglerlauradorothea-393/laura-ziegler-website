---
const currentYear = new Date().getFullYear();

const navLinks = [
  { href: '/', label: 'Start' },
  { href: '/leistungen', label: 'Leistungen' },
  { href: '/projekte', label: 'Projekte' },
  { href: '/und-sonst-so', label: 'Und sonst so?' },
  { href: '/kontakt', label: 'Kontakt' },
];

const legalLinks = [
  { href: '/impressum', label: 'Impressum' },
  { href: '/datenschutz', label: 'Datenschutz' },
  { href: '/cookies', label: 'Cookies' },
];
---

<footer class="relative overflow-hidden">
  <!-- Wellige Linie oben wie bei Dear Monday -->
  <div class="h-10 bg-mint" style="background-color: var(--color-mint);">
    <svg viewBox="0 0 1200 40" preserveAspectRatio="none" class="w-full h-full" aria-hidden="true">
      <path d="M0,40 C200,0 400,40 600,20 C800,0 1000,40 1200,20 L1200,40 L0,40 Z" fill="var(--color-cream)"/>
    </svg>
  </div>
  
  <div class="bg-cream py-16" style="background-color: var(--color-cream);">
    <div class="container">
      <div class="grid gap-12 md:grid-cols-4">
        <!-- Brand -->
        <div class="md:col-span-2">
          <a href="/" class="inline-block mb-6">
            <span class="font-extrabold text-3xl" style="color: var(--color-coral);">Laura Ziegler</span>
          </a>
          <p class="text-black/70 max-w-sm mb-6">
            Projekt- & Veranstaltungsmanagement für Kunst & Kultur, Bildung und Kreativbranche.
          </p>
          <p class="flex items-center gap-2 text-black/70">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
            </svg>
            <span>Bremen & Umgebung</span>
          </p>
        </div>
        
        <!-- Navigation -->
        <div>
          <h3 class="font-bold text-sm uppercase tracking-wider text-black mb-4">Navigation</h3>
          <ul class="space-y-3" role="list">
            {navLinks.map((link) => (
              <li>
                <a href={link.href} class="text-black/70 hover:text-black transition-colors">
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
        
        <!-- Contact -->
        <div>
          <h3 class="font-bold text-sm uppercase tracking-wider text-black mb-4">Kontakt</h3>
          <ul class="space-y-3" role="list">
            <li>
              <a 
                href="mailto:zieglerlauradorothea@gmail.com" 
                class="text-black/70 hover:text-black transition-colors text-sm"
              >
                zieglerlauradorothea@gmail.com
              </a>
            </li>
            <li>
              <a 
                href="https://www.linkedin.com/in/laura-ziegler-19a6321a3/" 
                target="_blank" 
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 text-black/70 hover:text-black transition-colors"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
                LinkedIn
              </a>
            </li>
          </ul>
          
          <a href="mailto:zieglerlauradorothea@gmail.com" class="btn-secondary mt-6 text-sm">
            → Schreib mir eine Mail
          </a>
        </div>
      </div>
      
      <!-- Bottom Bar -->
      <div class="mt-12 pt-8 border-t border-black/10 flex flex-col sm:flex-row justify-between items-center gap-4">
        <p class="text-black/50 text-sm">
          © {currentYear} Laura Ziegler
        </p>
        <ul class="flex items-center gap-6 flex-wrap justify-center" role="list">
          {legalLinks.map((link) => (
            <li>
              <a href={link.href} class="text-black/50 hover:text-black transition-colors text-sm">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>
</footer>
