---
// Kurzvorschau für die Unterseite /projekte – Positionen hervorgehoben

interface HighlightPreview {
  position: string;
  company: string;
  description: string;
  color: string;
}

const highlights: HighlightPreview[] = [
  {
    position: 'Projektleitung',
    company: 'KLUB DIALOG',
    description: 'Projekt- und Veranstaltungsmanagement, Vereinsarbeit',
    color: 'lavender',
  },
  {
    position: 'Producerin',
    company: 'manymany motion',
    description: 'Redaktion, Produktionsplanung, Kund:innenkommunikation',
    color: 'yellow',
  },
  {
    position: 'Kulturmanagerin',
    company: 'bremer shakespeare company',
    description: 'Büroorganisation, Verwaltung, Ticketing, Festivalorganisation',
    color: 'blue',
  },
  {
    position: 'Lehrbeauftragte',
    company: 'Seminar „Eventmanagement" (Universität Bremen)',
    description: 'Praxisseminar: Grundlagen Projekt- und Eventmanagement.',
    color: 'coral',
  },
];
---

<section class="py-20 bg-gray-light" style="background-color: var(--color-gray-light);" id="erfahrungen">
  <div class="container">
    <div class="text-center mb-12">
      <span class="tag mb-6">Erfahrungen</span>
      <h2 class="text-black">
        Projekte & Erfahrungen
      </h2>
    </div>
    
    <div class="space-y-4 max-w-4xl mx-auto mb-12">
      {highlights.map((item) => (
        <article 
          class="rounded-2xl p-6"
          style={`background-color: var(--color-${item.color});`}
        >
          <h3 class="font-bold text-black text-2xl mb-1 uppercase">
            {item.position}
          </h3>
          <p class="text-black/50 text-sm mb-3">
            {item.company}
          </p>
          <p class="text-black/80">
            {item.description}
          </p>
        </article>
      ))}
    </div>
    
    <div class="text-center">
      <a href="/projekte" class="btn-primary">
        Alle Projekte ansehen
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</section>
