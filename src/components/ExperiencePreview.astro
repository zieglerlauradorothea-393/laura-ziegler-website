---
// Kurzvorschau für die Unterseite /projekte – wie Event-Cards bei Dear Monday

interface HighlightPreview {
  title: string;
  line?: string;
  color: string;
}

const highlights: HighlightPreview[] = [
  {
    title: 'Projektleitung · KLUB DIALOG',
    line: 'Budget, Fördermittel-Logik, Abrechnung.',
    color: 'lavender',
  },
  {
    title: 'Producerin · manymany motion',
    line: 'Planung, Teamsteuerung, Ressourcen, Reporting.',
    color: 'yellow',
  },
  {
    title: 'Kulturmanagement · bremer shakespeare company',
    line: 'Organisation, Ticketing, Abrechnung/Verwendungsnachweise.',
    color: 'blue',
  },
  {
    title: 'Lehre · Seminar „Eventmanagement"',
    line: 'Grundlagen – an echten Beispielen.',
    color: 'coral',
  },
];
---

<section class="py-20 bg-gray-light" style="background-color: var(--color-gray-light);" id="erfahrungen">
  <div class="container">
    <div class="text-center mb-12">
      <span class="tag mb-6">Erfahrungen</span>
      <h2 class="text-black">
        Projekte & Erfahrungen
      </h2>
    </div>
    
    <div class="space-y-4 max-w-4xl mx-auto mb-12">
      {highlights.map((item, index) => (
        <article 
          class="rounded-2xl p-6 flex flex-col sm:flex-row sm:items-center gap-4"
          style={`background-color: var(--color-${item.color});`}
        >
          <!-- Nummer -->
          <div class="flex-shrink-0 flex items-center gap-4">
            <span class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-white/50 font-bold text-black text-lg">
              0{index + 1}
            </span>
          </div>
          
          <!-- Content -->
          <div class="flex-1">
            <h3 class="font-bold text-black text-lg mb-1">
              {item.title}
            </h3>
            {item.line && (
              <p class="text-black/80">
                {item.line}
              </p>
            )}
          </div>
          
          <!-- Arrow -->
          <div class="flex-shrink-0 hidden sm:block">
            <span class="text-black/50">→</span>
          </div>
        </article>
      ))}
    </div>
    
    <div class="text-center">
      <a href="/projekte" class="btn-primary">
        Alle Projekte ansehen
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</section>
