---
interface Props {
  title: string;
  subtitle?: string;
  tags?: string[];
  showCta?: boolean;
  heroImage?: string;
  bgColor?: string;
}

const { 
  title, 
  subtitle, 
  tags = [], 
  showCta = true,
  heroImage = '/images/laura-hero.jpeg',
  bgColor = 'coral'
} = Astro.props;
---

<section class={`relative overflow-hidden bg-${bgColor} min-h-[85vh] flex items-center`} style={`background-color: var(--color-${bgColor});`}>
  <!-- Wellige Linie oben (optional) -->
  <div class="absolute top-0 left-0 right-0 h-3 bg-pink" style="background-color: var(--color-pink);"></div>
  
  <div class="container relative z-10 py-16 md:py-24">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <!-- Text Content -->
      <div class="order-2 md:order-1">
        <!-- Tags -->
        {tags.length > 0 && (
          <div class="flex flex-wrap gap-2 mb-6">
            {tags.map((tag) => (
              <span class="tag">
                {tag}
              </span>
            ))}
          </div>
        )}
        
        <!-- Title -->
        <h1 class="text-black mb-6">
          {title}
        </h1>
        
        <!-- Subtitle -->
        {subtitle && (
          <p class="text-xl md:text-2xl text-black/80 leading-relaxed mb-8 max-w-lg font-medium">
            {subtitle}
          </p>
        )}
        
        <!-- CTA Buttons -->
        {showCta && (
          <div class="flex flex-wrap gap-4">
            <a href="/kontakt" class="btn-primary">
              <span>Projekt anfragen</span>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
            <a href="/#arbeitsweise" class="btn-secondary">
              So arbeite ich
            </a>
          </div>
        )}
      </div>
      
      <!-- Photo with Shape -->
      <div class="order-1 md:order-2 relative flex justify-center">
        <!-- Farbiger Shape hinter dem Foto -->
        <div 
          class="absolute w-[90%] h-[95%] top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 rounded-[60%_40%_30%_70%/60%_30%_70%_40%]"
          style="background-color: var(--color-lavender);"
          aria-hidden="true"
        ></div>
        
        <!-- Foto -->
        <img 
          src={heroImage}
          alt="Laura Ziegler"
          class="relative z-10 w-full max-w-md rounded-3xl object-cover object-top"
          style="aspect-ratio: 3/4;"
          loading="eager"
        />
      </div>
    </div>
  </div>
</section>
