---
import Layout from '../layouts/Layout.astro';
import ContactPanel from '../components/ContactPanel.astro';

const title = 'Leistungen – Laura Ziegler';
const description = 'Projekt- und Eventmanagement für Kunst & Kultur, Bildung und Kreativprojekte – in Bremen und darüber hinaus.';

interface ServiceCard {
  title: string;
  icon: string;
  fuerWen: string;
  aufgaben: string[];
  ergebnis: string;
  tags: string[];
  color: string;
}

const mainServices: ServiceCard[] = [
  {
    title: 'Projektmanagement',
    icon: '',
    fuerWen: 'Für Organisationen, die ein Projekt von A bis Z begleitet wissen wollen.',
    aufgaben: [
      'Projekt-Setup: Ziele, Umfang, Rollen, Prioritäten',
      'Zeit- und Meilensteinplanung',
      'Ressourcen- und Aufgabensteuerung',
      'Abstimmungsroutinen: Jour fixe, Vorstands-/Team-Meetings, Protokolle',
      'Schnittstellenkoordination mit Partner:innen, Förderer:innen und weiteren Beteiligten',
    ],
    ergebnis: 'Ein Projekt, das im Rahmen bleibt – zeitlich, finanziell und inhaltlich.',
    tags: ['Kulturprojekte', 'Bildungsinitiativen', 'Kampagnen'],
    color: 'lavender',
  },
  {
    title: 'Veranstaltungsmanagement',
    icon: '',
    fuerWen: 'Für alle, die Events planen – von der intimen Lesung bis zur großen Konferenz.',
    aufgaben: [
      'Planung, Vorbereitung und Durchführung von Veranstaltungsformaten',
      'Ablauf- und Produktionsplanung',
      'Location- und Technikabstimmung inkl. Dienstleister:innen',
      'Gäst:innen-/Teilnehmendenkoordination & Kommunikation',
      'Festival-/Eventorganisation (z. B. wiederkehrende Formate/Veranstaltungsreihen)',
    ],
    ergebnis: 'Eine Veranstaltung, die läuft und sich alle wohlfühlen.',
    tags: ['Konzerte', 'Workshops', 'Konferenzen', 'Festivals'],
    color: 'yellow',
  },
];

interface SupportService {
  title: string;
  items: string[];
  color: string;
}

const supportServices: SupportService[] = [
  {
    title: 'Budget, Abrechnung & Fördermittel',
    items: [
      'Kalkulation, Budgetierung und Controlling',
      'Kostenpläne, Mittelabrufe und Verwendungsnachweise',
      'Abrechnungsvorbereitung und Finanzorganisation',
    ],
    color: 'mint',
  },
  {
    title: 'Kommunikation & Organisation',
    items: [
      'Kommunikationsschnittstelle zwischen Auftraggebenden, Team, Partner:innen, Förderer:innen und Gästen',
      'Regelmäßige Abstimmungen & Reporting an Kund:innen/Projektbeteiligte',
      'Koordination mit Gastspielorten/Kooperationspartner:innen',
    ],
    color: 'coral',
  },
  {
    title: 'Büroorganisation & Team-Support',
    items: [
      'Büroorganisation/Verwaltung im laufenden Betrieb',
      'Ticketing',
      'Teamorganisation',
      'Allgemeine Orga-Themen: Kund:innenkontakt, Statistik, IT-Basics',
    ],
    color: 'blue',
  },
];
---

<Layout title={title} description={description}>
  <!-- Hero mit Foto -->
  <section class="py-16 md:py-24 bg-blue" style="background-color: var(--color-blue);">
    <div class="container">
      <nav class="mb-8 text-sm" aria-label="Breadcrumb">
        <ol class="flex items-center gap-2 text-black/60">
          <li><a href="/" class="hover:text-black transition-colors">Start</a></li>
          <li aria-hidden="true">/</li>
          <li class="text-black">Leistungen</li>
        </ol>
      </nav>
      
      <div class="flex flex-col md:flex-row md:items-center gap-8 md:gap-12">
        <div class="flex-1">
          <h1 class="text-black mb-6">Leistungen</h1>
          <p class="text-xl text-black/80 leading-relaxed font-medium max-w-xl">
            Projekt- und Eventmanagement für Kunst & Kultur, Bildung und Kreativprojekte – in Bremen und darüber hinaus. Du bekommst Struktur, Planung und Koordination aus einer Hand.
          </p>
        </div>
        
        <!-- Hero Foto -->
        <div class="flex-shrink-0 hidden md:block">
          <div class="relative">
            <div class="absolute -inset-4 rounded-3xl transform rotate-3 z-0" style="background-color: var(--color-pink);" aria-hidden="true"></div>
            <img 
              src="/images/laura-leistungen.png" 
              alt="Laura Ziegler bei der Arbeit" 
              class="relative z-10 w-64 lg:w-80 rounded-2xl object-cover"
            />
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Main Services (2-column cards) -->
  <section class="section bg-cream" style="background-color: var(--color-cream);">
    <div class="container">
      <div class="max-w-6xl mx-auto">
        <div class="grid md:grid-cols-2 gap-6">
          {mainServices.map((service) => (
            <article 
              class="rounded-3xl p-6 md:p-8 flex flex-col"
              style={`background-color: var(--color-${service.color});`}
            >
              <!-- Header -->
              <div class="mb-6 md:mb-8">
                <h2 class="text-xl md:text-2xl lg:text-3xl font-black text-black uppercase tracking-tight">
                  {service.title}
                </h2>
              </div>
              
              <!-- Für wen -->
              <div class="mb-4 md:mb-6">
                <h3 class="text-xs font-bold text-black/60 uppercase tracking-wider mb-2">Für wen</h3>
                <p class="text-black/90 text-base md:text-lg">{service.fuerWen}</p>
              </div>
              
              <!-- Typische Aufgaben -->
              <div class="mb-4 md:mb-6 flex-1">
                <h3 class="text-xs font-bold text-black/60 uppercase tracking-wider mb-3 md:mb-4">Typische Aufgaben</h3>
                <ul class="space-y-2 md:space-y-3">
                  {service.aufgaben.map((item) => (
                    <li class="flex items-start gap-2 md:gap-3 text-black/80 text-sm md:text-base">
                      <svg class="w-4 h-4 md:w-5 md:h-5 text-black/60 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                      <span>{item}</span>
                    </li>
                  ))}
                </ul>
              </div>
              
              <!-- Das Ergebnis -->
              <div class="rounded-2xl p-4 md:p-5 mb-4 md:mb-6" style={`background-color: color-mix(in srgb, var(--color-${service.color}) 70%, black 10%);`}>
                <h3 class="text-xs font-bold text-black/60 uppercase tracking-wider mb-2">Das Ergebnis</h3>
                <p class="text-black font-medium text-base md:text-lg">{service.ergebnis}</p>
              </div>
              
              <!-- Tags -->
              <div class="flex flex-wrap gap-2">
                {service.tags.map((tag) => (
                  <span class="inline-flex items-center px-3 md:px-4 py-1.5 md:py-2 text-xs font-bold uppercase bg-white/40 border-2 border-black/20 rounded-full text-black">
                    {tag}
                  </span>
                ))}
              </div>
            </article>
          ))}
        </div>
      </div>
    </div>
  </section>
  
  <!-- Support Services -->
  <section class="section bg-white">
    <div class="container">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-8 md:mb-12">
          <span class="tag mb-4 md:mb-6">Ergänzend</span>
          <h2 class="text-black">Weitere Leistungen</h2>
        </div>
        
        <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-4 md:gap-6">
          {supportServices.map((service) => (
            <article 
              class="rounded-2xl p-5 md:p-6"
              style={`background-color: var(--color-${service.color});`}
            >
              <h3 class="text-base md:text-lg font-bold text-black mb-3 md:mb-4 uppercase">{service.title}</h3>
              <ul class="space-y-2">
                {service.items.map((item) => (
                  <li class="flex items-start gap-2 text-black/80 text-xs md:text-sm">
                    <svg class="w-3.5 h-3.5 md:w-4 md:h-4 text-black/50 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    <span>{item}</span>
                  </li>
                ))}
              </ul>
            </article>
          ))}
        </div>
      </div>
    </div>
  </section>
  
  <!-- Match CTA mit Foto -->
  <section class="py-12 md:py-16 bg-pink relative overflow-hidden" style="background-color: var(--color-pink);">
    <div class="container">
      <div class="flex flex-col md:flex-row items-center justify-center gap-8 md:gap-16">
        <!-- Foto links -->
        <div class="hidden md:block relative">
          <div class="absolute -inset-3 rounded-full transform -rotate-6 z-0" style="background-color: var(--color-coral);" aria-hidden="true"></div>
          <img 
            src="/images/laura-match.jpeg" 
            alt="Laura Ziegler" 
            class="relative z-10 w-32 lg:w-40 h-32 lg:h-40 rounded-full object-cover border-4 border-white"
          />
        </div>
        
        <!-- Text -->
        <div class="text-center md:text-left">
          <h2 class="text-black mb-4 md:mb-6">Match?</h2>
          <a href="/kontakt" class="btn-primary">
            Projekt anfragen
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
  
  <ContactPanel />
</Layout>
