---
import Layout from '../layouts/Layout.astro';
import ImpulsePosts from '../components/ImpulsePosts.astro';
import ContactPanel from '../components/ContactPanel.astro';

const title = 'Und sonst so? – Laura Ziegler';
const description = 'Über innere Struktur, Halt und Ausrichtung. Philosophie, Achtsamkeit und Projektmanagement.';
---

<Layout title={title} description={description}>
  <!-- Hero -->
  <section class="py-16 md:py-24 bg-coral" style="background-color: var(--color-coral);">
    <div class="container">
      <nav class="mb-8 text-sm" aria-label="Breadcrumb">
        <ol class="flex items-center gap-2 text-black/60">
          <li><a href="/" class="hover:text-black transition-colors">Start</a></li>
          <li aria-hidden="true">/</li>
          <li class="text-black">Und sonst so?</li>
        </ol>
      </nav>
      
      <div class="flex flex-col md:flex-row md:items-center gap-8 md:gap-12">
        <!-- Text Content -->
        <div class="flex-1">
          <h1 class="text-black mb-4">
            Und sonst so?
          </h1>
          <p class="text-2xl md:text-3xl text-black/90 font-bold mb-6">
            Über innere Struktur, Halt und Ausrichtung
          </p>
          <p class="text-lg text-black/80 leading-relaxed max-w-xl">
            Hier findest du ein paar Gedanken über das, was mich antreibt – und warum Philosophie, Achtsamkeit und gutes Projektmanagement mehr miteinander zu tun haben, als man denkt.
          </p>
        </div>
        
        <!-- Photo with Shape -->
        <div class="flex-shrink-0 flex justify-center md:justify-end">
          <div class="relative w-64 md:w-80">
            <div 
              class="absolute inset-0 scale-110 rounded-[60%_40%_30%_70%/60%_30%_70%_40%] z-0"
              style="background-color: var(--color-mint);"
              aria-hidden="true"
            ></div>
            <img 
              src="/images/laura-yoga.png" 
              alt="Laura Ziegler beim Yoga"
              class="relative z-10 rounded-3xl w-full object-cover"
              style="aspect-ratio: 2/3;"
              loading="eager"
            />
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Impulse Posts -->
  <ImpulsePosts />
  
  <!-- Yoga Hint Section -->
  <section class="section bg-yellow" style="background-color: var(--color-yellow);">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <span class="tag mb-6">Ausgleich</span>
        <h2 class="text-black mb-6">
          Wenn ich mal nichts sortieren will
        </h2>
        <p class="text-lg text-black/80 leading-relaxed">
          Dann unterrichte ich Yoga.
        </p>
      </div>
    </div>
  </section>
  
  <ContactPanel />
</Layout>
