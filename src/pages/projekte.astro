---
import Layout from '../layouts/Layout.astro';
import ContactPanel from '../components/ContactPanel.astro';

const title = 'Projekte & Erfahrungen – Laura Ziegler';
const description = 'Von der Kulturszene über Bildungsarbeit bis zur Produktion – mein Weg führte mich durch verschiedene Bereiche.';

interface Highlight {
  title: string;
  lines: string[];
  tags: string[];
  color: string;
}

const highlights: Highlight[] = [
  {
    title: 'Projektleitung · KLUB DIALOG',
    lines: ['Projekt- und Veranstaltungsmanagement: Budget, Fördermittel-Logik, Abrechnung.'],
    tags: ['Projektleitung', 'Budget/Fördermittel', 'Stakeholder:innen'],
    color: 'lavender',
  },
  {
    title: 'Producerin · manymany motion',
    lines: ['Filmproduktionen: Beratung bis Umsetzung. Planung, Teamsteuerung, Ressourcen, Reporting.'],
    tags: ['Produktion', 'Planung', 'Teamsteuerung'],
    color: 'yellow',
  },
  {
    title: 'Kulturmanagement · bremer shakespeare company',
    lines: ['Theaterbetrieb & Veranstaltungen: Organisation, Ticketing, Abrechnung.'],
    tags: ['Theaterbetrieb', 'Organisation', 'Abrechnung'],
    color: 'blue',
  },
  {
    title: 'Lehre · Seminar „Eventmanagement" (Uni Bremen)',
    lines: ['Praxisseminar: Grundlagen im Projekt- und Eventmanagement – an echten Beispielen.'],
    tags: ['Lehre', 'Eventplanung', 'Begleitung'],
    color: 'coral',
  },
  {
    title: 'Aufbau & Veranstaltungen · Dots',
    lines: ['Gründung und Aufbau von Verein und GmbH. Kooperationen, Booking, Marketing.'],
    tags: ['Aufbau', 'Veranstaltungen', 'Kooperationen'],
    color: 'mint',
  },
  {
    title: 'Regieassistenz · Theater im OP Göttingen',
    lines: ['Regieassistenz und Büroorganisation parallel zum Studium.'],
    tags: ['Regieassistenz', 'Büroorganisation'],
    color: 'pink',
  },
];

const compactLine = 'Projektmanagement · Veranstaltungsmanagement · Fördermittel · Produktions- und Regieassistenz · Team-Koordination · Dokumentation';

const personSchema = {
  '@context': 'https://schema.org',
  '@type': 'Person',
  name: 'Laura Ziegler',
  jobTitle: 'Projekt- und Veranstaltungsmanagerin',
  url: 'https://lauraziegler.de/projekte',
};
---

<Layout title={title} description={description}>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify(personSchema)} />
  </Fragment>
  
  <!-- Hero -->
  <section class="py-16 md:py-24 bg-coral" style="background-color: var(--color-coral);">
    <div class="container">
      <nav class="mb-8 text-sm" aria-label="Breadcrumb">
        <ol class="flex items-center gap-2 text-black/60">
          <li><a href="/" class="hover:text-black transition-colors">Start</a></li>
          <li aria-hidden="true">/</li>
          <li class="text-black">Projekte</li>
        </ol>
      </nav>
      
      <div class="max-w-3xl">
        <h1 class="text-black mb-6">
          Projekte & Erfahrungen
        </h1>
        <p class="text-xl text-black/80 leading-relaxed font-medium">
          Von der Kulturszene über Bildungsarbeit bis zur Produktion – immer mit dabei: Organisation, Kommunikation und der Antrieb, Dinge umzusetzen.
        </p>
      </div>
    </div>
  </section>

  <!-- HIGHLIGHTS -->
  <section class="section bg-cream" style="background-color: var(--color-cream);">
    <div class="container">
      <div class="max-w-5xl mx-auto">
        <div class="text-center mb-12">
          <span class="tag mb-6">Portfolio</span>
          <h2 class="text-black">Highlights</h2>
        </div>

        <div class="space-y-4">
          {highlights.map((item, index) => (
            <article
              class="rounded-2xl p-6 flex flex-col md:flex-row md:items-center gap-4"
              style={`background-color: var(--color-${item.color});`}
            >
              <div class="flex-shrink-0">
                <span class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-white/50 font-bold text-black">
                  0{index + 1}
                </span>
              </div>
              
              <div class="flex-1">
                <h3 class="font-bold text-black text-lg mb-2">{item.title}</h3>
                {item.lines.map((line) => (
                  <p class="text-black/80">{line}</p>
                ))}
                <div class="flex flex-wrap gap-2 mt-3">
                  {item.tags.map((tag) => (
                    <span class="inline-flex items-center px-3 py-1 text-xs font-bold uppercase bg-white/50 rounded-full text-black">{tag}</span>
                  ))}
                </div>
              </div>
            </article>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Kompakt -->
  <section class="section bg-white">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <span class="tag mb-6">Kompetenzfelder</span>
        <h2 class="text-black mb-6">Kompakt</h2>
        <p class="text-lg text-black/70 leading-relaxed">
          {compactLine}
        </p>
      </div>
    </div>
  </section>
  
  <!-- Summary -->
  <section class="py-16 bg-mint" style="background-color: var(--color-mint);">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-black mb-6">Was sich durchzieht</h2>
        <p class="text-lg text-black/80 leading-relaxed">
          Von der Regieassistenz bis zur Geschäftsführung, vom Theaterbetrieb bis zur Filmproduktion – der rote Faden: <strong>Organisation, Kommunikation und der Wille, Projekte wirklich umzusetzen.</strong>
        </p>
      </div>
    </div>
  </section>
  
  <ContactPanel />
</Layout>
