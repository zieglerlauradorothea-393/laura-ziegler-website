---
import Layout from '../layouts/Layout.astro';
import ContactPanel from '../components/ContactPanel.astro';

const title = 'Projekte & Erfahrungen – Laura Ziegler';
const description = 'Von der Kulturszene über Bildungsarbeit bis zur Produktion – mein Weg führte mich durch verschiedene Bereiche.';

interface Highlight {
  position: string;
  company: string;
  lines: string[];
  tags: string[];
  color: string;
}

const highlights: Highlight[] = [
  {
    position: 'Projektleitung',
    company: 'KLUB DIALOG',
    lines: [
      'Projekt- und Veranstaltungsmanagement inkl. Budget, Fördermittel-Koordination, Abrechnung/Verwendungsnachweise.',
      'Koordination von Beteiligten und Partner:innen.',
    ],
    tags: ['Projektleitung', 'Fördermittel-Koordination', 'Veranstaltungsmanagement'],
    color: 'lavender',
  },
  {
    position: 'Producerin',
    company: 'manymany motion',
    lines: [
      'Filmproduktion: Kund:innenkommunikation, Konzeption und Redaktion, Dreharbeiten: Planung, Organisation und Durchführung, Team-/Ressourcenkoordination, Redaktion.',
    ],
    tags: ['Filmproduktion', 'Produktionsplanung', 'Projektentwicklung'],
    color: 'yellow',
  },
  {
    position: 'Kulturmanagement',
    company: 'bremer shakespeare company',
    lines: [
      'Theaterbetrieb & Veranstaltungen: Organisation, Ticketing, Kommunikation, Koordination mit Gastspielorten, Festivalorganisation.',
      'Abrechnung inkl. Verwendungsnachweise.',
    ],
    tags: ['Theaterbetrieb', 'Veranstaltungsorganisation', 'Festivalorganisation', 'Verwendungsnachweise'],
    color: 'blue',
  },
  {
    position: 'Lehre',
    company: 'Seminar „Eventmanagement" (Universität Bremen)',
    lines: [
      'Praxisseminar: Grundlagen Projekt- und Eventmanagement.',
      'Erarbeitung einer vollständigen Eventwoche an der Universität (Begleitung von Planung bis Durchführung).',
    ],
    tags: ['Lehre', 'Eventmanagement', 'Betreuung'],
    color: 'coral',
  },
];

const compactLine = 'Projektmanagement · Veranstaltungsmanagement · Fördermittel · Produktions- und Regieassistenz · Team-Koordination · Dokumentation';

const personSchema = {
  '@context': 'https://schema.org',
  '@type': 'Person',
  name: 'Laura Ziegler',
  jobTitle: 'Projekt- und Veranstaltungsmanagerin',
  url: 'https://lauraziegler.de/projekte',
};
---

<Layout title={title} description={description}>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify(personSchema)} />
  </Fragment>
  
  <!-- Hero mit Foto -->
  <section class="relative py-16 md:py-24 bg-yellow" style="background-color: var(--color-yellow);">
    <!-- Coral-Streifen oben -->
    <div class="absolute top-0 left-0 right-0 h-2 md:h-3 z-30" style="background-color: var(--color-coral);"></div>
    <div class="container">
      <nav class="mb-8 text-sm" aria-label="Breadcrumb">
        <ol class="flex items-center gap-2 text-black/60">
          <li><a href="/" class="hover:text-black transition-colors">Start</a></li>
          <li aria-hidden="true">/</li>
          <li class="text-black">Projekte</li>
        </ol>
      </nav>
      
      <div class="flex flex-col md:flex-row md:items-center gap-8 md:gap-12">
        <div class="flex-1">
          <h1 class="text-black mb-6">
            Projekte & Erfahrungen
          </h1>
          <p class="text-xl text-black/80 leading-relaxed font-medium max-w-xl">
            Von der Kulturszene über Bildungsarbeit bis zur Produktion – immer mit dabei: Organisation, Kommunikation und der Antrieb, Dinge umzusetzen.
          </p>
        </div>
        
        <!-- Hero Foto -->
        <div class="flex-shrink-0 hidden md:block">
          <div class="relative">
            <div class="absolute -inset-4 rounded-3xl transform -rotate-3 z-0" style="background-color: var(--color-lavender);" aria-hidden="true"></div>
            <img 
              src="/images/laura-projekte.png" 
              alt="Laura Ziegler - kreativ und urban" 
              class="relative z-10 w-64 lg:w-80 rounded-2xl object-cover"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- HIGHLIGHTS -->
  <section class="section bg-cream" style="background-color: var(--color-cream);">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-8 md:mb-12">
          <span class="tag mb-4 md:mb-6">Portfolio</span>
          <h2 class="text-black">Highlights</h2>
        </div>

        <div class="space-y-4">
          {highlights.map((item) => (
            <article
              class="rounded-2xl p-5 md:p-6"
              style={`background-color: var(--color-${item.color});`}
            >
              <h3 class="font-bold text-black text-xl md:text-2xl mb-1 uppercase">{item.position}</h3>
              <p class="text-black/50 text-sm mb-3 md:mb-4">{item.company}</p>
              
              <div class="space-y-2 mb-3 md:mb-4">
                {item.lines.map((line) => (
                  <p class="text-black/80 text-sm md:text-base">{line}</p>
                ))}
              </div>
              
              <div class="flex flex-wrap gap-2">
                {item.tags.map((tag) => (
                  <span class="inline-flex items-center px-2.5 md:px-3 py-1 text-xs font-bold uppercase bg-white/50 rounded-full text-black">{tag}</span>
                ))}
              </div>
            </article>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Kompakt -->
  <section class="section bg-white">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <span class="tag mb-4 md:mb-6">Kompetenzfelder</span>
        <h2 class="text-black mb-4 md:mb-6">Kompakt</h2>
        <p class="text-base md:text-lg text-black/70 leading-relaxed">
          {compactLine}
        </p>
      </div>
    </div>
  </section>
  
  <!-- Summary -->
  <section class="py-12 md:py-16 bg-mint" style="background-color: var(--color-mint);">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-black mb-4 md:mb-6">Was sich durchzieht</h2>
        <p class="text-base md:text-lg text-black/80 leading-relaxed">
          Von der Regieassistenz bis zur Geschäftsführung, vom Theaterbetrieb bis zur Filmproduktion – der rote Faden: <strong>Organisation, Kommunikation und der Wille, Projekte wirklich umzusetzen.</strong>
        </p>
      </div>
    </div>
  </section>
  
  <ContactPanel />
</Layout>
